extends layout

block content
  .w3-container.w3-padding-16
    form(action="/login" method="POST")
      .w3-section
        label.w3-text-deep-purple Username:
        input.w3-input.w3-border.w3-round-large(type="text" name="username" required)
      .w3-section
        label.w3-text-deep-purple Password:
        input.w3-input.w3-border.w3-round-large(type="password" name="password" required)
      .w3-section
        button.w3-button.w3-blue.w3-large.w3-round-large(type="submit") Login