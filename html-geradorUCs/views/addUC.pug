extends layout

block content
  .w3-container
    .w3-card-4.w3-margin.w3-white.w3-padding
      .w3-container.w3-padding-16
        h1.w3-xxlarge.w3-text-blue.w3-center Adicionar Nova UC

    .w3-container.w3-padding-16
      form(action="/uc" method="POST" class="w3-container w3-padding-large w3-card-4 w3-white")
        .w3-section
          label ID:
          input.w3-input(type="text" name="_id" required)
        .w3-section
          label Título:
          input.w3-input(type="text" name="titulo" required)
        .w3-section
          label Docentes:
          select.w3-select(name="docentes" multiple required)
            each docente in docentes
              option(value=docente._id) #{docente.nome}
        .w3-section
          label Horários Teóricos (separados por ponto e vírgula):
          input.w3-input(type="text" name="horarioTeoricas" required)
        .w3-section
          label Horários Práticos (separados por ponto e vírgula):
          input.w3-input(type="text" name="horarioPraticas" required)
        .w3-section
          label Avaliação (separados por ponto e vírgula):
          input.w3-input(type="text" name="avaliacao" required)
        .w3-section
          label Data do Teste:
          input.w3-input(type="text" name="dataTeste" required)
        .w3-section
          label Data do Exame:
          input.w3-input(type="text" name="dataExame" required)
        .w3-section
          label Data do Projeto:
          input.w3-input(type="text" name="dataProjeto" required)
        button.w3-button.w3-blue.w3-large(type="submit") Adicionar UC